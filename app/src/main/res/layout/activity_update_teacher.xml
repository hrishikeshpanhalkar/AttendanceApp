<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="login_User"
    tools:context=".Activities.Teacher_Update_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#FFFF33"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/BackUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ic_arrow_back"
                android:transitionName="login_User" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_update"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account"
                android:transitionName="transition_profile_picture" />


            <TextView
                android:id="@+id/User_fullName_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image_update"
                android:fontFamily="@font/bungee"
                android:includeFontPadding="false"
                android:text="Hrishikesh Panhalkar"
                android:textSize="15sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addimage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/profilepic_round" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FFFF33"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/bdatebtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_date_range" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:editable="false"
                        android:id="@+id/user_birthdate_label_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/bungee"
                        android:includeFontPadding="false"
                        android:text="01/09/1997"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/user_birthdate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_birthdate_label_update"
                        android:layout_centerHorizontal="true"
                        android:text="BirthDate"
                        android:textSize="20sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FFFF33"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_gender" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_gender_label_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:inputType="text"
                        android:fontFamily="@font/bungee"
                        android:includeFontPadding="false"
                        android:text="Male"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/user_gender_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_gender_label_update"
                        android:layout_centerHorizontal="true"
                        android:text="Gender"
                        android:textSize="20sp" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_email_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Email"
                app:hintTextColor="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_"
                    android:drawablePadding="10dp"
                    android:editable="false"
                    android:text="hrishikeshpanhalkar07@gmail.com"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullname_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Full Name"
                app:hintTextColor="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:text="Hrishikesh Panhalkar"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_phone_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Phone"
                app:hintTextColor="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="10dp"
                    android:text="8308739198"
                    android:textColor="#000000" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course Name"
                app:startIconDrawable="@drawable/ic_edit_fullname"
                app:hintTextColor="#000000"
                app:endIconMode="dropdown_menu"
                app:endIconTint="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/course_name_update"
                    android:padding="16dp"
                    android:text="Computer Science"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Semister"
                app:hintTextColor="#000000"
                app:startIconDrawable="@drawable/ic_edit_fullname"
                android:layout_marginTop="10dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="#000000"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/semisterno_update"
                    android:padding="16dp"
                    android:text="Semister 6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/teacher_update_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#FFFF33"
                android:text="Update"
                android:layout_margin="20dp"
                android:background="@drawable/round_background"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#000000" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>